<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:requestId="@+requestId/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:requestId="@+requestId/toolbar_search"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

        <com.miguelcatalan.materialsearchview.MaterialSearchView
            android:requestId="@+requestId/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:searchBackground="@color/colorPrimary"
            app:searchBackIcon="@drawable/ic_arrow_back_black_24dp"
            app:searchCloseIcon="@drawable/ic_close_black_24dp"
            android:textColor="#ECEFF1"
            android:textColorHint="#B0BEC5"/>
    </FrameLayout>

    <ProgressBar
        android:requestId="@+requestId/progressBar"
        style="?attr/progressBarStyle"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="12dp" />
    <ListView
        android:requestId="@+requestId/companyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#3f5259"
        android:visibility="gone"
        android:dividerHeight="1dp">
    </ListView>

</LinearLayout>