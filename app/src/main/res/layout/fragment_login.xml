<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <RelativeLayout
        android:id="@+id/loginContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_login_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/users_1" />

        <EditText
            android:id="@+id/emailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/user_login_image"
            android:background="@drawable/oval"
            android:hint="email"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/user_pass_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/user_login_image"
            android:src="@drawable/locked" />

        <EditText
            android:id="@+id/passEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/oval"
            android:layout_below="@id/emailEdit"
            android:singleLine="true"
            android:layout_toRightOf="@id/user_pass_image"
            android:hint="pass"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <Button
            android:layout_weight="0.5"
            android:id="@+id/signInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginRight="6dp"
            android:textAllCaps="false"
            android:background="@drawable/colorbutton"
            android:text="Sign in"

            android:padding="8dp" />

        <Button
            android:id="@+id/registrationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.5"
            android:background="@drawable/colorbutton"
            android:text="Registration"
            android:textAllCaps="false"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/forgot_pass_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lock_1" />

        <Button
            android:id="@+id/forgot_pass_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="0dp"
            android:text="Forgot your password?"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="normal"
            android:background="@drawable/noborder"/>
    </LinearLayout>

    <Button
        android:id="@+id/skipBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/colorbutton"
        android:text="Skip >" />

</LinearLayout>