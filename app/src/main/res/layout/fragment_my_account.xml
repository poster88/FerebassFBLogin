<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <ImageView
        android:id="@+id/acc_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/label"/>

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="45dp"
        android:text="ACCOUNT"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/email_verify_status_label"
        android:layout_below="@+id/acc_user_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="26dp"
        android:text="@string/verify_label_status" />

    <ImageView
        android:id="@+id/email_verify_status_img"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/email_verify_status_label"
        android:layout_below="@id/label" />

    <TextView
        android:id="@+id/verify_email_btn"
        android:text="verify your email "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/email_verify_status_label" />

    <TextView
        android:id="@+id/change_user_pass_btn"
        android:text="change pass "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:layout_below="@+id/verify_email_btn"/>

    <TextView
        android:id="@+id/user_data_info"
        android:text="Day of birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:layout_below="@id/change_user_pass_btn"/>

    <TextView
        android:id="@+id/company_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company info"
        android:layout_marginTop="26dp"
        android:layout_below="@id/user_data_info"/>

    <TextView
        android:id="@+id/company_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company search" />

    <TextView
        android:id="@+id/user_telephone"
        android:text="Your number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:layout_below="@id/company_search"/>

</RelativeLayout>